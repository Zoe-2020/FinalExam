<Window x:Class="FinalExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <CheckBox x:Name="CurrentAccCB" Content="Current Account" HorizontalAlignment="Left" Margin="78,47,0,0" VerticalAlignment="Top" Checked="CurrentAccCB_Checked" Unchecked="CurrentAccCB_Unchecked"/>
        <CheckBox x:Name="SavingAccCB" Content="Saving Account" HorizontalAlignment="Left" Margin="233,47,0,0" VerticalAlignment="Top" Checked="SavingAccCB_Checked" Unchecked="SavingAccCB_Unchecked"/>
        <ListBox x:Name="accountLB" HorizontalAlignment="Left" Height="257" Margin="112,131,0,0" VerticalAlignment="Top" Width="187" Loaded="accountLB_Loaded"/>
        <Label x:Name="AccountListLabel" Content="Account List" HorizontalAlignment="Left" Height="26" Margin="112,100,0,0" VerticalAlignment="Top" Width="73"/>


    </Grid>
</Window>
